labeldm() {
	local action
	local label device

	# Get the disk label
	if [[ $# -lt 2 ]]; then
		action=x
	else
		action=$1
		shift
	fi

	case $action in
		mount|umount|unmount)
			for label in $*; do
				device=$(sudo blkid -L $label)
				if [[ "x$device" == "x" ]]; then
					echo "No such disk labled with $label !"
					echo
					echo "Available mountable disk are: "
					sudo blkid -s LABEL
					echo
				else
					sudo udevil $action $device
				fi
			done
			;;
		*)
			# Exception
			echo "Usage: mnt mount|umount label0 label1 ..."
			return 0
			;;
	esac
}

# ex: ts=4 sw=4 filetype=zsh
